<Window x:Class="ASAP_WPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASAP_WPF"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="SettingsWindows" Height="150" Width="300">
    <Grid>
        <CheckBox Name="SaveOutputFiels"  Content="Save output files into folder" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top"/>
        <Label Content="Pixel per micrometer" HorizontalAlignment="Left" Margin="93,18,0,0" VerticalAlignment="Top"/>
        <Slider Name="SlValue"  HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Width="210" Value="93" Minimum="1" Maximum="200" TickFrequency="5"/>
        <TextBox Margin="225,49,10.333,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding ElementName=SlValue, Path=Value, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Center"/>

    </Grid>
</Window>
